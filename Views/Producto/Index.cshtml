@model Pagina_Administrador.Models.ProductoViewModel

<h2>Gestión de Productos</h2>

<!-- Formulario Crear/Editar -->
<form asp-action="@(Model.Producto.Id == 0 ? "Crear" : "Editar")" method="post">
    <input type="hidden" asp-for="Producto.Id" />

    <div>
        <label>Título:</label>
        <input asp-for="Producto.Titulo" placeholder="Título del producto" />
    </div>
    <div>
        <label>Precio:</label>
        <input asp-for="Producto.Precio" type="number" step="0.01" />
    </div>
    <div>
        <label>Stock:</label>
        <input asp-for="Producto.Stock" type="number" />
    </div>
    <div>
        <label>Imagen (URL):</label>
        <input asp-for="Producto.Imagen" />
    </div>
    <div>
        <label>Detalles:</label>
        <textarea asp-for="Producto.Detalles"></textarea>
    </div>
    <div>
        <label>Acerca De:</label>
        <textarea asp-for="Producto.AcercaDe"></textarea>
    </div>
    <div>
        <label>Rating Count:</label>
        <input asp-for="Producto.RatingCount" />
    </div>
    <div>
        <label>Best Seller:</label>
        <input asp-for="Producto.BestSeller" />
    </div>
    <div>
        <label>ID Categoría:</label>
        <input asp-for="Producto.IdCategoria" />
    </div>

    <button type="submit">@(Model.Producto.Id == 0 ? "Crear" : "Actualizar")</button>
</form>

<hr />

<!-- Tabla de productos existentes -->
<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>ID Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model.ListaProductos)
        {
            <tr>
                <td>@producto.Titulo</td>
                <td>@producto.Precio</td>
                <td>@producto.Stock</td>
                <td>@producto.IdCategoria</td>
                <td>
                    <a asp-action="Index" asp-route-id="@producto.Id">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@producto.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
