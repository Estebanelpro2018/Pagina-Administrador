@model Pagina_Administrador.Models.DetalleCompraViewModel

@{
    ViewData["Title"] = "Detalle de Compras";
}

<h2 class="mb-4">Gestión de Detalle de Compras</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Guardar" method="post">
            <input type="hidden" asp-for="DetalleCompra.IdDetalle" />

            <div class="form-group">
                <label asp-for="DetalleCompra.IdCompra" class="control-label"></label>
                <input asp-for="DetalleCompra.IdCompra" class="form-control" />
                <span asp-validation-for="DetalleCompra.IdCompra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetalleCompra.IdProducto" class="control-label"></label>
                <input asp-for="DetalleCompra.IdProducto" class="form-control" />
                <span asp-validation-for="DetalleCompra.IdProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetalleCompra.Cantidad" class="control-label"></label>
                <input asp-for="DetalleCompra.Cantidad" class="form-control" />
                <span asp-validation-for="DetalleCompra.Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetalleCompra.PrecioUnitario" class="control-label"></label>
                <input asp-for="DetalleCompra.PrecioUnitario" class="form-control" />
                <span asp-validation-for="DetalleCompra.PrecioUnitario" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <h4>Lista de Detalles de Compra</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ID Compra</th>
                    <th>ID Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaDetalleCompra)
                {
                    <tr>
                        <td>@item.IdDetalle</td>
                        <td>@item.IdCompra</td>
                        <td>@item.IdProducto</td>
                        <td>@item.Cantidad</td>
                        <td>@item.PrecioUnitario</td>
                        <td>
                            <a asp-action="Index" asp-route-id="@item.IdDetalle" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Eliminar" asp-route-id="@item.IdDetalle" class="btn btn-sm btn-danger" onclick="return confirm('¿Seguro que deseas eliminar este detalle?')">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
